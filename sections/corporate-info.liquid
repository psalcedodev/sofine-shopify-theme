<!-- sections/corporate-info.liquid -->
<div class="corporate-info-section" style="padding: 2rem; background: #f8f8f8; border-radius: 8px;">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.description }}</p>
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | image_url: width: 400 }}" alt="Corporate Image" style="max-width: 100%; border-radius: 6px;" width="400" height="auto">
  {% endif %}
</div>

{% schema %}
{
  "name": "Corporate Info",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Our Company"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We are a leading provider of corporate solutions."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Corporate Info"
    }
  ]
}
{% endschema %} 