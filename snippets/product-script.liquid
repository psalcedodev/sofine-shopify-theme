<script type="text/javascript">
  $(document).ready(function () {
    window.toggleAccordion = function (contentId, iconId) {
      var $content = $('#' + contentId);
      var $icon = $('#' + iconId);
      var $textarea = $('#custom-message');
      var $charCount = $('#char-count');

      $textarea.on('input', function () {
        var remaining = 500 - $(this).val().length;
        $charCount.text(remaining + '/500');
      });

      if ($content.css('maxHeight') !== '0px') {
        // Collapse the accordion
        $content.css('maxHeight', '0');
        $icon.removeClass('rotate'); // Reset the chevron to its original state
      } else {
        // Expand the accordion
        $content.css('maxHeight', $content.prop('scrollHeight') + 'px');
        $icon.addClass('rotate'); // Rotate the chevron up
      }
    };

    // Initialize Fotorama
    $script([jQuery('#cms_js').data('fotorama')], function () {
      var slideMain = $('div[data-slide-main]'),
        fotoramaElement = $('div[data-fotorama]'),
        images = fotoramaElement.children().clone(),
        startIndex = 0;
      $('[data-js-gallery]').click(function () {
        if (!fotoramaElement.hasClass('init')) {
          fotoramaElement.children().each(function () {
            let lazy = $(this).data('src');
            if (lazy) {
              $(this).attr('src', lazy);
            }
          });
          fotoramaElement.addClass('init');
        }
        var currentSlide = slideMain.find('.slick-current');
        if (currentSlide.length) {
          var imageId = currentSlide.data('image-id');
          images.each(function (index) {
            if ($(this).data('image-id') == imageId) {
              startIndex = index;
              return false;
            }
          });
        }
        var fotorama = fotoramaElement.fotorama({ allowfullscreen: true, nav: 'thumbs' }).data('fotorama');
        fotorama.show({ index: startIndex, time: 0 });
        fotorama.requestFullScreen();
      });
      $('div[data-fotorama]').on('click', function (e, fotorama) {
        if ($(e.target).hasClass('fotorama__stage__frame')) {
          $('div[data-fotorama]').data('fotorama').cancelFullScreen();
          $('div[data-slide-nav]').find('.slick-track').css('transform', 'none');
        }
      });
    });

    // Click on tab of product detail page
    $(document).on('click', '.cms-tab a[data-toggle="pill"]', function (e) {
      e.preventDefault();
      var tab_id = $(this).attr('href');
      $(this).closest('ul').find('li').removeClass('active');
      $(this).closest('li').addClass('active');
      var class_st = $(tab_id).attr('class');
      $('.' + class_st).removeClass('active');
      $(tab_id).addClass('active');
    });

    // Click slick arrow button
    $(document).on('click', 'div[data-slide-nav] .slick-arrow', function () {
      if ($('div[data-slide-nav] .thumb_img.slick-active').length > 0) {
        $('div[data-slide-nav] .thumb_img.slick-current').trigger('click');
      }
    });

    // Form validation for required fields
    const $form = $('form[data-type="add-to-cart-form"]'); // Target the form
    const $requiredFields = $form.find('.select__select[required], #custom-message[required]'); // Select required fields

    // Form submission event
    $form.on('submit', function (e) {
      let isValid = true;

      // Loop through required fields and validate
      $requiredFields.each(function () {
        const $field = $(this);

        if (!$field.val() || $field.val().trim() === '') {
          isValid = false;
          $field.css('border-color', 'red'); // Highlight invalid field
          $field.addClass('is-invalid'); // Add an invalid class for styling if needed
        } else {
          $field.css('border-color', ''); // Reset border color if valid
          $field.removeClass('is-invalid'); // Remove invalid class
        }
      });

      if (!isValid) {
        e.preventDefault(); // Prevent form submission
        alert('Please fill out all required fields.'); // Notify the user
      }
    });

    // Reset red border on input or change
    $requiredFields.on('input change', function () {
      $(this).css('border-color', ''); // Reset border color
      $(this).removeClass('is-invalid'); // Remove invalid class
    });

    // Debugging
    console.log('Validation script loaded successfully.');
  });
</script>
